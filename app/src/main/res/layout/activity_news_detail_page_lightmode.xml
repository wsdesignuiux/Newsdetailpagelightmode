                        android:src="@drawable/the_verge_logo_svg"/>

                    <TextView
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TheVerge"
                        android:textColor="#a0a5b5"
                        android:letterSpacing="0.0425"
                        android:layout_marginLeft="5dp"
                        android:textSize="14.5sp" />

                    <TextView
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="2h ago"
                        android:letterSpacing="0.0425"
                        android:textColor="#a0a5b5"
                        android:textSize="14.5sp" />
                </LinearLayout>

                <TextView
                    android:fontFamily="@font/sf_pro_display_heavy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28.2dp"
                    android:lineSpacingExtra="7.5dp"
                    android:text="No, staring at a screen\nwonâ€™t damage your eyes"
                    android:textColor="#2e2f41"
